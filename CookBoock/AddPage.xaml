<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBoock.AddPage"
             Title="AddPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Название" FontSize="Large"/>
            <Entry x:Name="Name"/>
            <VerticalStackLayout x:Name="Ingridients">
                <HorizontalStackLayout >
                    <Label Text="Ингридиенты" FontSize="Large"/>
                    <Button Text="+" Clicked="AddIngridient"/>
                    <Button Text="-" Clicked="RemoveIngridient"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Label Text="Рецепт" FontSize="Large"/>
            <Editor x:Name="CookingProcess" AutoSize="TextChanges"/>
            <HorizontalStackLayout>
                <Button Text="Сохранить" Clicked="Save"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>