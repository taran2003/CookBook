<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBoock.RecipePage"
             Title="{Binding Name}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IconOverride="back.png"/>
    </Shell.BackButtonBehavior>
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="trash.png" Command="{Binding Delete}" Clicked="GoBack"/>
        <ToolbarItem IconImageSource="pencil.png" Clicked="Rewrite"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout x:Name="MainContent">
            <Image Source="{Binding Image}"/>
            <CollectionView x:Name="Ingridients" 
                            SelectionMode="None"
                            ItemsSource="{Binding Ingridients}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Ingridient}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="{Binding CookingProcess}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>