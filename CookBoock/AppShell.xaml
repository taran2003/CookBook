<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CookBoock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CookBoock"
    xmlns:helpers="clr-namespace:CookBoock.Helpers"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab x:Name="Home"
            Title="{Static helpers:Constants+Texts.TitleFavorites}" 
             Icon="{Static helpers:Constants+Images.FavoriteIcon}">
            <ShellContent Title = "Название" ContentTemplate="{DataTemplate local:Favorites}"/>
            <ShellContent Title = "Тэги" ContentTemplate="{DataTemplate local:FavoritesTag}"/>
        </Tab>
        <Tab Title="{Static helpers:Constants+Texts.TitleCart}" 
             Icon="{Static helpers:Constants+Images.ShopListIcon}">
            <ShellContent ContentTemplate="{DataTemplate local:ShopList}"/>
        </Tab>
    </TabBar>
</Shell>
