<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CookBoock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CookBoock"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Избраное" Icon="favorite.png">
            <ShellContent ContentTemplate="{DataTemplate local:Favorites}"/>
        </Tab>
        <Tab x:Name="Home" Title="Домашняя" Icon="home.png">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Корзина" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:ShopList}"/>
        </Tab>
    </TabBar>
</Shell>
